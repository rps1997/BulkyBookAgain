@model Product

<form method="post" asp-action="DeleteCategory">
    <input asp-for="Id" class="visually-hidden"></input>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete category
            </h2>
            <hr></hr>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" disabled></input>
            @*<span asp-validation-for="Name" class="text-danger"></span>*@

        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" disabled></input>
            @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@
        </div>
        <button type="submit" class="btn btn-danger" stype="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}

