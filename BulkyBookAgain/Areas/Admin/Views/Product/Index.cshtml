@model List<Product>

<div class="container">
    <div class = "row pt-4 pb-3">
        <div class = "col-6">
            <h2 class = "text-primary">Category List</h2>
        </div>
        <div class = "col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle text-light"></i>Create New Product
            </a>
        </div>
    </div>
<table class = "table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Title</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(a => a.Author))
        {
            <tr>
                <td>@obj.Title</td>
                <td>@obj.Author</td>
                <td>
                    <div class="btn btn-primary">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="btn btn-primary">
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-secondary"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
                <td>
                    <div class="btn btn-primary">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-secondary"> <i class="bi bi-info-circle"></i> Details</a>
                    </div>
                </td>
            </tr>
        }        
    </tbody>
</table>
</div>